<UserControl x:Class="Projet1.AjouterInfoArc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet1"
             mc:Ignorable="d" 
             d:DesignHeight="420" d:DesignWidth="800">

    <UserControl.Resources>
    </UserControl.Resources>
    
    <Grid Background="#FFFFD4A1">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"></RowDefinition>
            <RowDefinition Height="50*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" HorizontalAlignment="Center" Text="Information sur l'arc" Margin="20"/>
        <TextBox Grid.Row="1" Margin="50,30"/>
        <DockPanel Grid.Row="2" Background="#FF304A53">
            <ContentControl>
                <local:menuBas/>
            </ContentControl>
        </DockPanel>
    </Grid>
</UserControl>
