<Window x:Class="Projet1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel Background="#FF304A53" DockPanel.Dock="Top">
            <Image Source="Images/icone_one_piece.png" Width="30"></Image>
            <Separator/>
            <Menu  VerticalAlignment="Center" Foreground="#FFF1E8E8">
                <Menu.Background>
                    <SolidColorBrush Color="#FF304A53" Opacity="0.1"/>
                </Menu.Background>
                <MenuItem Header="Accueil" Click="Clique_accueil" Background="#FF304A53"/>
                <Separator/>
                <MenuItem Header="Ajouter Personnage" Click="Clique_ajt_perso"/>
            </Menu>
        </WrapPanel>

        <ContentControl x:Name="content">
            <local:DescriptionArc/>
        </ContentControl>
    </DockPanel>
</Window>
