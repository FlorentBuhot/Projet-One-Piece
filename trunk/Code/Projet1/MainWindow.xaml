<Window x:Class="Projet1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <WrapPanel Background="DeepSkyBlue" DockPanel.Dock="Top">
            <Image Source="Images/icone_one_piece.png" Width="30"></Image>
            <Separator/>
            <Menu Background="DeepSkyBlue"  VerticalAlignment="Center">
                <MenuItem Header="Accueil"/>
                <Separator/>
                <MenuItem Header="Ajouter Personnage"/>
            </Menu>
        </WrapPanel>
        <DockPanel Background="Red">
            <Viewbox DockPanel.Dock="Bottom" Stretch="Uniform">
                <Canvas Height="1200" Width="780">
                    <Image Source="Images/carte_one_piece3.png" Height="1200" Width="2369" Canvas.Left="-796"/>
                </Canvas>
            </Viewbox>
        </DockPanel>
    </DockPanel>
</Window>
