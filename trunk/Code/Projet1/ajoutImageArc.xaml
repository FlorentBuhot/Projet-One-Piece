<UserControl x:Class="Projet1.ajoutImageArc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projet1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
       
    </UserControl.Resources>
    <DockPanel Background="#FFFFD4A1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="85*"/>
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0">
                <Border BorderBrush="black" BorderThickness="1" Margin="50" MinHeight="150" MinWidth="200" Background="White">
                    <Image x:Name="image_Arc" Source="{Binding Source, Converter={StaticResource StringToImageConverter}}" MaxHeight="150" MaxWidth="200"></Image>
                </Border>
                <Button Content="Parcourir" Click="Bouton_Parcourir" MinHeight="30" MinWidth="180" HorizontalAlignment="Center" Margin="30"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <TextBlock DockPanel.Dock="top" TextWrapping="Wrap" Text="Description de l'image et explication" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="30"/>
                <TextBox DockPanel.Dock="Bottom" TextWrapping="Wrap" Text="{Binding Description}" MinHeight="200" Margin="30"/>
            </StackPanel>
            <DockPanel Grid.Row="1" Grid.ColumnSpan="2" Background="#FF304A53">
                <ContentControl x:Name="contentMenu">
                    <Menu VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FF304A53">
                        <Button Content="Annuler" Click="ClickAnnuler" Style="{StaticResource menuBas}"/>
                        <Separator/>
                        <Separator/>
                        <Separator/>
                        <Separator/>
                        <Separator/>
                        <Separator/>
                        <Button Content="Ajouter" Click="ClickAjouter" Style="{StaticResource menuBas}"/>
                    </Menu>
                </ContentControl>
            </DockPanel>
        </Grid>
    </DockPanel>
</UserControl>
